
import overviewRaces from '../data/overview-races.json';
import legislativeCandidates from '../data/legislative-candidates.json';

export default function mapDistrictCode(districtCode) {
    if (!districtCode) return '';

    // Check US House and PSC districts
    const overviewRace = overviewRaces.find(race => race.raceSlug === districtCode);
    if (overviewRace) {
        console.log(overviewRace.displayName)
        return overviewRace.displayName;
    }

    // Check State Senate and House districts
    const legislativeRace = legislativeCandidates.find(candidate => candidate.raceSlug === districtCode);
    if (legislativeRace) {
        console.log(legislativeRace.raceDisplayName)
        return legislativeRace.raceDisplayName;
    }

    // If not found, return the original districtCode
    return districtCode;
}

const selDistricts = {
    usHouse: 'us-house-2',
    psc: 'psc-2',
    mtHouse: 'HD-1',
    mtSenate: 'SD-1',
    matchedAddress: null
};